<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment.AddProductFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Product Id"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/fourteen"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/pro_id"
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_input_field"
                        android:padding="5dp"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/sixteen" />

                    <TextView
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:text="Product Name"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/fourteen"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/pro_name"
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_input_field"
                        android:padding="5dp"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/sixteen" />

                    <TextView
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:text="Category"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/fourteen"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/pro_category_spin"
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_input_field"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/sixteen" />


                    <TextView
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:text="Sub Category"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/fourteen"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/pro_subcategory_Spin"
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_input_field"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/sixteen" />

                    <TextView
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:text="Supplier"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/fourteen"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/pro_supplier_spin"
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_input_field"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/sixteen" />

                    <TextView
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:text="Brand"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/fourteen"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/pro_brand_spin"
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_input_field"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/sixteen" />

                    <TextView
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:text="Size/Model"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/fourteen"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/pro_size"
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_input_field"
                        android:padding="5dp"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/sixteen" />

                    <TextView
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:text="Product Unit"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/fourteen"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/pro_unit"
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_input_field"
                        android:padding="5dp"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/sixteen" />

                    <TextView
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:text="Product Purchase Rate"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/fourteen"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/pro_purchase_rate"
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_input_field"
                        android:padding="5dp"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/sixteen" />

                    <TextView
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:text="Product Sales Rate"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/fourteen"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/pro_Sales_rate"
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_input_field"
                        android:padding="5dp"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/sixteen" />

                    <TextView
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:text="Main Image"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/fourteen"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/main_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorC"
                        android:hint="Upload Image"
                        android:padding="5dp"
                        android:textColorHint="#000" />

                    <LinearLayout
                        android:id="@+id/main_gone_pic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:visibility="gone">


                        <ImageView
                            android:id="@+id/pro_main_pic"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@drawable/hamburger" />

                    </LinearLayout>

                    <TextView
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:text="Deatails Images"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/fourteen"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/details_upload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorC"
                        android:hint="Upload Image"
                        android:padding="5dp"
                        android:textColorHint="#000" />

                    <LinearLayout
                        android:id="@+id/gone_details_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:visibility="gone">


                        <ImageView
                            android:id="@+id/details_image"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@drawable/hamburger" />

                    </LinearLayout>

                    <TextView
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:text="Product Details"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/fourteen"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/pro_details"
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_input_field"
                        android:padding="5dp"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/sixteen" />

                    <TextView
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:text="Product Type"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/fourteen"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/pro_type"
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_input_field"
                        android:padding="5dp"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/sixteen" />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/submit"
                        style="@style/RobotoBold"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button"
                        android:text="Submit"
                        android:textColor="@color/white" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</FrameLayout>